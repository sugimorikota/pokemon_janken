<div style="display: flex; align-items: center; justify-content: center;">
  <div>
    <div style='margin-top: 40%; font-size: 20px; text-align: center;'>
      <%= @main_pokemon.pokemon.name %>
    </div>
    <div align="center">
      <%= image_tag @main_pokemon.pokemon.pokemon_image %>
    </div>
    <div  align="center">
      <% @main_pokemon.pokemon.pokemon_types.each do |main_pokemon_type| %>
        <%= image_tag(main_pokemon_type.type_image, height: '25', weight: '75') %>
      <% end %>
    </div>
  </div>
</div>

<div style="text-align: center;">
  <div>
    <%= link_to 'このポケモンでたたかう', user_pokemon_matches_battle_path, class: 'btn btn-primary', style: 'margin: 10px' %>
  </div>
  <div>
    <%= link_to '　 ポケモンを変える 　', box_pokemons_path,  class: 'btn btn-success', style: 'margin-bottom: 5px'%>
  </div>
  <div>
    今日の残り対戦回数：<%= @current_user_pokemon_match.match_limit %>
  </div>
</div>
