
<div class="row" style='border: solid 2px black; padding: 50px; margin: 2% 20%; background-color: white;'>
  <div class="col-md-6">
    <table class="table">
      <tr>
        <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th scope="row">レート</th>
        <td><%= @user.user_pokemon_match.match_score %></td>
      </tr>
      <tr>
        <td>
          <% @user_proofs.each do |user_proof| %>
            <%= link_to proof_path(id: user_proof.id) do %>
              <%= image_tag(user_proof.proof.proof_image.url, height: '50', style: 'margin-right: 10px;') %>
            <% end %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="col-md-6" align='center'>
    <div>
      <%= image_tag @user.avatar.url, class: 'rounded-circle', size: '150x150' %>
    </div>
  </div>
  <% if current_user.id == @user.id %>
    <div align = 'right'>
      <%= link_to '編集', edit_profile_path, class: 'btn btn-success float-right' %>
    </div>
  <% end %>
</div>
<div align='center'>
  <%= link_to "戻る", users_path, class: 'btn btn-success', style: 'margin-bottom: 5px'%>
</div>
