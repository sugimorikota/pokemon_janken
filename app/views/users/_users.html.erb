<table align="center" class="users-table" >
  <% users.each_with_index do |user, index| %>
    <tr style='text-align: center; border: 2px dotted gray;'>
      <td style="width: 5%;">
        <%= user.decorate.ranking_top3(index) %>
      </td>
      <td style="width: 10%;">
        <div>
          <%= index + 1 %>
        </div>
        <div style='font-size: 12px; color: gray;'>
          <%= user.user_pokemon_match.match_score %>
        </div>
      </td>
      <td style="width: 20%; vertical-align: middle;">
        <%= image_tag user.avatar.url, class: 'rounded-circle mt-3', size: '100x100' %>
      </td>
      <td style="width: 50%;">
        <%= link_to user.name, profile_path(id:user.id) %>
      </td>
      
    </tr>
  <% end %>
</table>
