<%= form_with model: @proof, url: admin_proofs_path, local: true, html: { id: 'proof-form' } do |f| %>
  <% if @proof.errors.any? %>
    <ul>
    <% @proof.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  
  <div class="form-group" style='margin-top: 10px;'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group" style='margin-top: 10px;'>
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>
  </div>
  <div class="form-group" style='margin-top: 10px;'>
    <%= f.label :proof_image %><br/>
    <%= f.file_field :proof_image, class: 'form-control mb-3', accept: 'image/*', id: 'avatar-input' %>
  </div>
  <%= f.submit (t 'defaults.register'), class: 'btn btn-primary', style: 'margin-top: 10px;' %>
  
<% end %>